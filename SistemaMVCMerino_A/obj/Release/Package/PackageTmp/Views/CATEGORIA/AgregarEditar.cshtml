@model SistemaMVCMerino_A.Models.CATEGORIA
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>AgregarEditar</h2>

<div class="card">
    <div class="card-header">
        Informacion de la Categoria
    </div>
    <div class="card-body">
        <a href="~/CATEGORIA/Index">Categorias</a>
    </div>
    <div class="breadcrumb-item acive">
        @(Model.IDCATEGORIA > 0 ? Model.NOMBRE : "Nuevo Registro")
    </div>
</div>

@using (Html.BeginForm("Guardar", "CATEGORIA", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IDCATEGORIA)
    <div class="card">
        <div class="card-header">Informacion de la Categoria</div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("ID")
                @Html.TextBoxFor(x => x.IDCATEGORIA, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre de la Categoria")
                @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Descripcion")
                @Html.TextBoxFor(x => x.DESCRIPCION, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.DESCRIPCION, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Estado")
                <select name="ESTADO" class="form-control">
                    <option @(Model.ESTADO == "" ? "Selected" : "") value="">--Selecciona--</option>
                    <option @(Model.ESTADO == "A" ? "Selected" : "") value="A">Activo</option>
                    <option @(Model.ESTADO == "I" ? "Selected" : "") value="I">Inactivo</option>
                </select>
                @Html.ValidationMessageFor(x => x.ESTADO, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <br />
    <div class="text-end">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/CATEGORIA" class="btn btn-danger">Cancelar</a>
    </div>
    <br />
}
